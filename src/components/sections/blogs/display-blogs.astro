---
import BlogCard from "../../ui/blog-card.astro";

const blogs = [
  {
    title: "How to Learn Programming the Right Way",
    slug: "how-to-learn-programming",
    content: "Programming is not about memorizing syntax. It is about learning how to think, break problems into smaller pieces, and solve them logically.",
    image: "https://images.unsplash.com/photo-1519389950473-47ba0277781c?auto=format&fit=crop&q=80&w=1160",
    createdAt: "15 Nov 2022",
  },
  // ... (rest of your blog data)
];
---

<section class="container mx-auto px-4 md:px-6 lg:px-8 py-20">
  <div class="mb-14 max-w-2xl">
    <h2 class="text-3xl md:text-4xl font-semibold text-gray-900 font-ovo tracking-wide">
      Latest Articles
    </h2>
    <p class="mt-4 text-gray-700 font-medium font-ovo tracking-wide">
      Thoughtful writing on development, productivity, and mindset.
    </p>
  </div>

  <div class="grid gap-x-8 gap-y-12 sm:grid-cols-2 lg:grid-cols-3">
    {blogs && blogs.map((blog) => (
      <BlogCard
        title={blog.title}
        content={blog.content}  {/* Changed 'content' to 'description' to match your component props */}
        imageUrl={blog.image}        {/* Changed 'imageUrl' to 'image' for consistency */}
        createdAt={blog.createdAt}      {/* Changed 'createdAt' to 'date' */}
        linkHref={`/blog/${blog.slug}`}
        linkText="Read Article"
        linkIcon="ArrowRightIcon"
      />
    ))}
    </div>
</section>