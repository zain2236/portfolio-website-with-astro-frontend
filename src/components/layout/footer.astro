---
import { Facebook, Instagram, Twitter, Linkedin } from "@lucide/astro";

const year = new Date().getFullYear();
---

<footer class="bg-gray-200/60 border-t border-gray-300">
  <div class="container mx-auto md:px-4 sm:px-6 lg:px-8 md:py-16 py-8 px-4">
    
    <!-- Top Section -->
    <div class="flex flex-col gap-12 md:flex-row md:items-center md:justify-between">
      
      <!-- Brand -->
      <div>
        <h1 class="text-2xl font-bold font-outfit tracking-wide text-gray-900">
          JAIN<span class="text-3xl">.</span>
        </h1>
        <p class="mt-1 text-sm font-medium font-ovo text-gray-700">
          Frontend Developer
        </p>
      </div>

      <!-- Navigation -->
      <ul class="md:flex flex-wrap md:gap-x-8 gap-2 md:gap-y-3">
        <li>
          <a href="/" class="md:text-sm text-xs font-medium font-ovo text-gray-700 hover:text-gray-900 transition">
            Home
          </a>
        </li>
        <li>
          <a href="/about" class="md:text-sm text-xs font-medium font-ovo text-gray-700 hover:text-gray-900 transition">
            About
          </a>
        </li>
        <li>
          <a href="/blogs" class="md:text-sm text-xs font-medium font-ovo text-gray-700 hover:text-gray-900 transition">
            Blog
          </a>
        </li>
        <li>
          <a href="/portfolio" class="md:text-sm text-xs font-medium font-ovo text-gray-700 hover:text-gray-900 transition">
            Portfolio
          </a>
        </li>
      </ul>

      <!-- Social Links -->
      <div class="flex gap-3">
        <a href="#" aria-label="Facebook" class="rounded-full bg-gray-100 p-2 hover:bg-gray-300 transition">
          <Facebook class="md:w-5 md:h-5 w-4 h-4 text-gray-800" />
        </a>
        <a href="#" aria-label="Instagram" class="rounded-full bg-gray-100 p-2 hover:bg-gray-300 transition">
          <Instagram class="md:w-5 md:h-5 w-4 h-4 text-gray-800" />
        </a>
        <a href="#" aria-label="Twitter" class="rounded-full bg-gray-100 p-2 hover:bg-gray-300 transition">
          <Twitter class="md:w-5 md:h-5 w-4 h-4 text-gray-800" />
        </a>
        <a href="#" aria-label="LinkedIn" class="rounded-full bg-gray-100 p-2 hover:bg-gray-300 transition">
          <Linkedin class="md:w-5 md:h-5 w-4 h-4 text-gray-800" />
        </a>
      </div>

    </div>

    <!-- Divider -->
    <div class="mt-12 border-t border-gray-300 pt-6 md:text-center text-left">
      <p class="md:text-sm text-xs font-ovo text-gray-700">
        Â© {year} JAIN. All rights reserved.
      </p>
      <p class="mt-1 md:text-sm text-xs font-ovo text-gray-600">
        Designed by
        <a
          href="https://www.linkedin.com/in/jain-kumar-b6253a200/"
          class="text-gray-900 hover:underline"
          target="_blank"
        >
          Jain Shah
        </a>
      </p>
    </div>

  </div>
</footer>
