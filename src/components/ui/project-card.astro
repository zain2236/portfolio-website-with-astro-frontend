---
import { Image } from "astro:assets";
import { ArrowRight } from "@lucide/astro";
const { title, description, image, link, ctaTtile, tech } =
  Astro.props;
---

<article
  class="group w-full h-full flex flex-col rounded-3xl border border-gray-200/60 bg-white hover:shadow-xl transition-all duration-300 hover:-translate-y-1 overflow-hidden"
>
  <!-- Image -->
  <div class="relative aspect-4/3 bg-gray-50 overflow-hidden shrink-0">
    {
      image ? (
        <div class="w-full h-full flex items-center justify-center grayscale-[0.2] group-hover:grayscale-0 transition-all duration-500 overflow-hidden">
          <Image
            src={image}
            alt={title || "Project image"}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
            width={500}
            height={400}
            quality={60}
            format="webp"
            loading="lazy"
            fetchpriority="low"
          />
        </div>
      ) : (
        <div class="w-full h-full bg-gray-100 flex items-center justify-center">
          <p class="text-gray-500 text-sm font-outfit">No Image Available</p>
        </div>
      )
    }

    <!-- Overlay -->
    <div
      class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-all duration-300"
    >
    </div>
  </div>

  <!-- Content -->
  <div class="flex flex-col grow p-6 md:p-8">
    <div class="grow min-h-[140px]">
      <h3 class="text-xl md:text-2xl font-bold text-gray-900 mb-3">
        {title}
      </h3>

      <p class="text-sm text-gray-600 leading-relaxed mb-5 font-outfit">
        {description}
      </p>

      <!-- Tech badge (redesigned) -->
      {
        tech && (
          <div class="mb-6">
            <span
              class="inline-flex items-center px-3 py-1 rounded-full text-[10px] font-semibold tracking-widest uppercase 
                       bg-gray-50 text-gray-600 border border-gray-200 
                       group-hover:bg-gray-100 transition-all font-outfit"
            >
              {tech}
            </span>
          </div>
        )
      }
    </div>

    <!-- CTA -->
    {
      ctaTtile && (
        <div class="pt-4 border-t border-gray-100 mt-auto">
          <a
            href={link || "#"}
            class="text-sm font-semibold text-gray-800 flex items-center gap-2 group-hover:gap-3 transition-all font-outfit"
          >
            {ctaTtile}
            <ArrowRight class="w-4 h-4 text-gray-600 transition-transform group-hover:translate-x-1" />
          </a>
        </div>
      )
    }
  </div>
</article>
