---
import { GlobeIcon , ArrowRightIcon , SmartphoneIcon , ImageIcon , SearchIcon } from '@lucide/astro';
const { title, description , icons  , linkText , linkHref } = Astro.props;

const iconMap = {
    SmartphoneIcon: SmartphoneIcon,
    GlobeIcon: GlobeIcon,
    ImageIcon: ImageIcon,
    SearchIcon: SearchIcon,
};

const Icon = iconMap[icons as keyof typeof iconMap] ;

