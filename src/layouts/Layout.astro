---
import "../styles/global.css";
import Header from "../components/layout/header.astro";
import Footer from "../components/layout/footer.astro";

// Header data
async function getHeader() {
  try {
    const response = await fetch("http://localhost:1337/api/header?populate=*");
    const data = await response.json();
    if (!response.ok) {
      throw new Error("Server is down");
    }
    return data?.data || "";
  } catch (error) {
    console.error(error);
  }
}

// Footer Data
async function getFooter() {
  try {
    const response = await fetch(
      "http://localhost:1337/api/footer?populate[footerLogo][populate][image][fields][0]=url&populate[navigation][populate]=*&populate[services][populate]=*"
    );
    const data = await response.json();
    if (!response.ok) {
      throw new Error("Server is down");
    }
    return data?.data || "";
  } catch (error) {
    console.error(error);
  }
}

const header = await getHeader();
const footer = await getFooter();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>My Portfolio</title>
  </head>
  <!-- class="bg-[#FEFEFA]" -->
  <body class="bg-gray-50">
    <Header data={header} />
    <main>
      <slot />
    </main>
    <Footer data={footer} />
  </body>
</html>
